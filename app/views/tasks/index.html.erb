
<div class="container" style=" border: solid 1px black; width:300px; height:auto; margin-top:10px;">
  <p>
  <h2>HIER</h2>
    <% @yesterday_tasks.each do | yesterday_task | %>
    <%= yesterday_task.nom_du_client %>
    <%= link_to 'Détails', task_path(yesterday_task) %>
  <% end %>
  </p>
</div>

<div class="container" style=" border: solid 1px black; width:fit-content; height:auto; margin-top:10px;">
  <p>
  <h2>AUJOURD'HUI</h2>
  <% @today_tasks.each do | today_task | %>
    <div class="card" style="background-color: grey; border: solid 1px black;width:600px; height:auto; margin-top:10px; padding:10px;">
      <p>
        <%= today_task.nom_du_client %>
        <%= today_task.category %>
        <%= link_to 'Détails', task_path(today_task) %>
      </p>
          <%= link_to 'ajouter une trace', new_task_comment_path(today_task) %>
      <p>
        <a>Historique de la tâche</a>
        <% today_task.comments.each do |comment| %>
        <div class="text-input" style="background-color: white; height:auto; margin-top:10px; padding:10px;">
          <%= comment.review %>
          <%= comment.created_at %>
        </div>
          <% end %>
      </p>
    </div>
  <% end %>
  </p>
</div>

<div class="container" style="border: solid 1px black; width:300px; height:auto; margin-top:10px;">
  <p>
  <h3>DEMAIN</h3>
  <% @tomorrow_tasks.each do | tomorrow_task | %>
  <p><%= tomorrow_task.nom_du_client %> - <%= tomorrow_task.category %>
    <%= link_to 'Détails', task_path(tomorrow_task) %>

  </p>
  <% end %>
  </p>
</div>

