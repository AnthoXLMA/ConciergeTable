<h2>Task Index</h2>
<% @tasks.each do |task| %>
<div class="container" style="background-color: orange; border: solid 1px black; width:300px; height:auto; margin-top:10px;">
  <p><%= task.date_d_echeance %> - <%= task.nom_du_client  %></p>
</div>
<% end %>

<h2>Chronology</h2>
<% @tasks_chronology.each do |task| %>
<div class="container" style="background-color: grey; border: solid 1px black; width:300px; height:auto; margin-top:10px;">
  <p><%= task.nom  %></p>
  <p><%= task.date_de_demande  %></p>
  <p><%= task.category  %></p>
  <p><%= task.nom_du_client  %></p>
  <p><%= task.description  %></p>
  <p><%= task.date_d_echeance  %></p>
</div>
<% end %>

